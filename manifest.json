{
  "manifest_version": 3,
  "name": "Passive-Aggressive Tab Manager",
  "version": "1.0",
  "description": "A browser extension that passive-aggressively reminds you about your tab hoarding habits",
  "permissions": ["tabs", "storage", "notifications"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}